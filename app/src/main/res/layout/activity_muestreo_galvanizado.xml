<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Muestreo_galvanizado">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muestreo Galvanizado"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_iniciar"
                    android:layout_width="782dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#3CBF41"
                    android:drawableEnd="@drawable/cheque"
                    android:text="Iniciar"
                    android:textSize="20dp" />

                <Space
                    android:layout_width="235dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.5" />

                <Button
                    android:id="@+id/btn_terminar"
                    android:layout_width="815dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FF2414"
                    android:text="Terminar"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Seleccione el codigo"
                            android:textColor="@color/black">
                        </TextView>

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:tooltipText="codigo"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Ingresar codigo"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomStart="20dp"
                            app:boxCornerRadiusTopEnd="20dp"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_codigo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </com.google.android.material.textfield.TextInputEditText>

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:hint="Calibre"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusBottomStart="20dp"
                                app:boxCornerRadiusTopEnd="20dp"
                                app:endIconMode="clear_text">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_calibre"
                                    android:layout_width="175dp"
                                    android:layout_height="wrap_content">

                                </com.google.android.material.textfield.TextInputEditText>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:hint="Diametro"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusBottomStart="20dp"
                                app:boxCornerRadiusTopEnd="20dp"
                                app:endIconMode="clear_text"
                                android:layout_marginLeft="6dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_diametro_ini"
                                    android:layout_width="175dp"
                                    android:layout_height="wrap_content">

                                </com.google.android.material.textfield.TextInputEditText>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:hint="Numero Bobina"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusBottomStart="20dp"
                                app:boxCornerRadiusTopEnd="20dp"
                                app:endIconMode="clear_text"
                                android:layout_marginLeft="6dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_nro_bobina"
                                    android:layout_width="175dp"
                                    android:layout_height="wrap_content">

                                </com.google.android.material.textfield.TextInputEditText>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:hint="Velocidad Bobina"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusBottomStart="20dp"
                                app:boxCornerRadiusTopEnd="20dp"
                                app:endIconMode="clear_text"
                                android:layout_marginLeft="6dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_velocidad_bobina"
                                    android:layout_width="175dp"
                                    android:layout_height="wrap_content">

                                </com.google.android.material.textfield.TextInputEditText>

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView29"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Acabado"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.radiobutton.MaterialRadioButton
                                        android:id="@+id/rbLeft"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:button="@android:color/transparent"
                                        android:text="BIEN"
                                        android:textColor="@android:color/black"
                                        android:layout_weight="1"
                                        android:checked="true"
                                        android:textAlignment="center"
                                        android:background="@drawable/radio_button_left_selector"
                                        android:onClick="onRadioButtonClicked">
                                    </com.google.android.material.radiobutton.MaterialRadioButton>

                                    <com.google.android.material.radiobutton.MaterialRadioButton
                                        android:id="@+id/rbRight"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:button="@android:color/transparent"
                                        android:text="MAL"
                                        android:textColor="@android:color/holo_red_light"
                                        android:layout_weight="1"
                                        android:textAlignment="center"
                                        android:background="@drawable/radio_button_righ_selector"
                                        android:onClick="onRadioButtonClicked">

                                    </com.google.android.material.radiobutton.MaterialRadioButton>

                                </RadioGroup>

                                <EditText
                                    android:id="@+id/txt_observaciones_acabado"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="Observaciones" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Destino"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>

                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.radiobutton.MaterialRadioButton
                                        android:id="@+id/radiobuton_puas"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/radio_button_left_d_selector"
                                        android:button="@android:color/transparent"
                                        android:checked="true"
                                        android:onClick="onRadioButton2Clicked"
                                        android:text="PUAS"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"></com.google.android.material.radiobutton.MaterialRadioButton>

                                    <com.google.android.material.radiobutton.MaterialRadioButton
                                        android:id="@+id/radiobuton_externo"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/radio_button_center_d_selector"
                                        android:button="@android:color/transparent"
                                        android:onClick="onRadioButton2Clicked"
                                        android:text="EXTERNO"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"></com.google.android.material.radiobutton.MaterialRadioButton>

                                    <com.google.android.material.radiobutton.MaterialRadioButton
                                        android:id="@+id/radiobutton_grapas"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/radio_button_righ_d_selector"
                                        android:button="@android:color/transparent"
                                        android:onClick="onRadioButton2Clicked"
                                        android:text="GRAPAS"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"></com.google.android.material.radiobutton.MaterialRadioButton>
                                </RadioGroup>

                            </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Space
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5" />

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <EditText
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LLenar datos de proceso?"
                            android:enabled="false">

                        </EditText>
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbsi_proceso"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:button="@android:color/transparent"
                                android:text="SI"
                                android:textColor="@android:color/black"
                                android:layout_weight="1"
                                android:checked="true"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_left_selector_proceso"
                                android:onClick="onRadioButton3Clicked">
                            </com.google.android.material.radiobutton.MaterialRadioButton>

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/rbno_proceso"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:button="@android:color/transparent"
                                android:text="NO"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"
                                android:checked="true"
                                android:textAlignment="center"
                                android:background="@drawable/radio_button_righ_selector_proceso"
                                android:onClick="onRadioButton3Clicked">

                            </com.google.android.material.radiobutton.MaterialRadioButton>

                        </RadioGroup>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_proceso"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp">

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#85C1E9"
                                    android:text="Proceso"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textView13"
                                        android:layout_width="255dp"
                                        android:layout_height="wrap_content"
                                        android:background="#85C1E9"
                                        android:text="pH Decapado : "
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/txt_ph_decapado"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ems="10"
                                        android:inputType="phone" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView121"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#85C1E9"
                                            android:text="Temperatura Horno"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>

                                        <EditText
                                            android:id="@+id/txt_temp_horno"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="10"
                                            android:inputType="phone" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView101"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#85C1E9"
                                            android:text="Temperatura cuba Zinc"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>

                                        <EditText
                                            android:id="@+id/txt_temp_cuba_zinc"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="10"
                                            android:inputType="phone" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView103"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#85C1E9"
                                            android:text="Nivel de la cuba"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>

                                        <RadioGroup
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" >

                                            <RadioButton
                                                android:id="@+id/radiobutton_ok_nivel_cuba"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Bien" />

                                            <RadioButton
                                                android:id="@+id/radiobutton_no_nivel_cuba"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Mal" />
                                        </RadioGroup>

                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView104"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#85C1E9"
                                            android:text="Concentracion HCI decapado"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>

                                        <EditText
                                            android:id="@+id/txt_concen_hci_decapado"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="10"
                                            android:inputType="phone" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView105"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#85C1E9"
                                            android:text="Concetracion fE decapado"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>

                                        <EditText
                                            android:id="@+id/txt_concen_fe_decapado"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="10"
                                            android:inputType="phone" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView106"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#85C1E9"
                                            android:text="Grados Baumé"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"/>

                                        <EditText
                                            android:id="@+id/txt_grados_beume"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ems="10"
                                            android:inputType="phone" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#3CBF41"
                android:drawableEnd="@drawable/cheque"
                android:text="Registrar" />


            <Button
                android:id="@+id/editar_muestreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#3CBF41"
                android:background="@color/black"
                android:text="Realizar muestreo" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>